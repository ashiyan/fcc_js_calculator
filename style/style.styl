dark_blue_transparent =	rgba(44,62,80,0.7)
dark_blue =	rgb(44,62,80)
dark_white = rgb(222,222,222)
light_blue = rgb(53,73,93)
light_gray = rgb(111,121,132)
bright_blue = rgb(48,164,234)

@font-face
	font-family "Lekton"
	font-style normal
	src url(../fonts/Lekton-Regular.ttf)

body
	background-color rgb(0, 44, 92)
	background-image url(../img/bg.png)
	font-family "Lekton"
	color dark_white
	-webkit-user-select none
	
.calculator
	position absolute
	left 0
	right 0
	margin 100px auto
	width 450px
	height 600px
	padding 5px
	border-spacing 10px
	background-color dark_blue_transparent
	
.black-wrap
	position absolute
	left 0
	right 0
	width 100%
	height 100%
	position fixed
	display none
	background-color rgba(0,0,0,.6)
	
.display
	&-main
	&-result
		-webkit-user-select none
		text-align right
		padding 0 10px
		width 400px
		background none
		outline none
		border none
		color dark_white
	&-main
		height 100px
		font-size 350%
	&-result
		height 30px
		font-size 100%
	
.btn
	width 80px
	height 80px
	font-size 150%
	text-align center
	cursor pointer
	border-radius 40px
	&-clear
	&-divide
	&-multiply
	&-delete
	&-subtract
	&-add
	&-plusmin
	&-comma
		color bright_blue
	&-equal
		border 1px solid bright_blue
	&:hover
		background-color light_blue
		transition 100ms
		
.popup-round
	width 350px
	height 150px
	display flex
	flex-wrap wrap
	justify-content space-around
	align-items center
	background-color dark_blue
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	margin auto auto
	display none
	position fixed
	&-options
		display flex
		flex-direction column
		justify-content center
		width 200px
		height 90px
	&-radio
		-webkit-appearance none
		outline none
		width 18px
		height 18px
		border-radius 50%
		border 1px solid bright_blue
		background-color dark_blue
		vertical-align middle
		&:hover
			background-color light_blue
			transition 100ms
		&:checked
			background-color bright_blue
			transition 100ms
	&-button
		width 80px
		height 30px
		color bright_blue
		background-color transparent
		border none
		outline none
		border-radius 40px
		&:hover
			background-color light_blue
			transition 100ms
			
.settings
	position absolute
	margin 0 5px
	fill light_gray
	width 25px
	height 25px
	&:hover
		fill bright_blue
		transition 100ms
	&-cell
		text-align center